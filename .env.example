# WidgetBoard Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# API Keys & Authentication
# =============================================================================

# Gemini AI API Key (Required for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# MCP (Model Context Protocol) Configuration
# =============================================================================

# MCP Server URL
VITE_MCP_SERVER_URL=wss://localhost:3001/mcp

# MCP Authentication
VITE_MCP_AUTH_ENABLED=true
VITE_MCP_CLIENT_ID=your_mcp_client_id
VITE_MCP_CLIENT_SECRET=your_mcp_client_secret

# =============================================================================
# Microsoft Outlook Integration
# =============================================================================

# Microsoft Graph API Configuration
VITE_MS_CLIENT_ID=your_microsoft_client_id
VITE_MS_TENANT_ID=your_microsoft_tenant_id
VITE_MS_REDIRECT_URI=http://localhost:3000/auth/callback

# Outlook API Scopes
VITE_MS_SCOPES=Mail.Read,Mail.ReadWrite,Mail.Send

# =============================================================================
# Security Configuration
# =============================================================================

# Enable security headers
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true

# JWT Configuration
VITE_JWT_SECRET=your_jwt_secret_here_min_32_chars
VITE_JWT_EXPIRY=3600

# Rate Limiting
VITE_RATE_LIMIT_MAX_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# Feature Flags
# =============================================================================

VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_DEBUG_MODE=false

# =============================================================================
# Performance & Monitoring
# =============================================================================

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# Logging level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# =============================================================================
# Data Storage & Compliance
# =============================================================================

# Data retention period (days)
VITE_DATA_RETENTION_DAYS=90

# Enable GDPR compliance features
VITE_GDPR_ENABLED=true

# Enable data encryption
VITE_ENABLE_DATA_ENCRYPTION=true

# =============================================================================
# Development Settings
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# API Base URL
VITE_API_BASE_URL=http://localhost:3000/api

# Enable mock data for development
VITE_USE_MOCK_DATA=false
