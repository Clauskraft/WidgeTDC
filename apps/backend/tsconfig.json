{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@widget-tdc/mcp-types": ["../../packages/shared/mcp-types/src/index.ts"],
      "@widget-tdc/mcp-types/*": ["../../packages/shared/mcp-types/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/services/network/**",
    "src/services/sc/**",
    "src/services/security/**",
    "src/services/agent/**"
  ]
}
