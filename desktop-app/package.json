{
  "name": "widget-tdc-desktop",
  "version": "1.0.0",
  "description": "WidgeTDC Neural Command Center - Desktop Client",
  "main": "main.js",
  "author": "Clauskraft",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.widgettdc.desktop",
    "productName": "WidgeTDC Command Center",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "main.js",
      "preload.js",
      "error.html",
      "package.json",
      "!node_modules",
      "!dist"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "widget-tdc-monorepo": "file:.."
  }
}
