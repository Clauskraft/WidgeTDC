TO DO -{
  "name": "widget-tdc-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/widget-board && vite",
    "build": "cd apps/widget-board && vite build",
    "build:shared": "npm run build:domain-types && npm run build:mcp-types",
    "build:domain-types": "cd packages/shared/domain-types && npm install && npm run build",
    "build:mcp-types": "cd packages/shared/mcp-types && npm install && npm run build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.2",
    "@google/genai": "^1.29.1",
    "adaptivecards": "^3.0.0",
    "adaptivecards-react": "^1.1.1",
    "deepseek-sdk": "^1.0.0",
    "dotenv": "^17.2.3",
    "openai": "^6.9.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-grid-layout": "^1.5.2",
    "react-is": "^19.2.0"
  },
  "overrides": {
    "adaptivecards-react": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit",
      "eslint --fix"
    ]
  }
}