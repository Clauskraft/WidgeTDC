<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <!-- Target .NET 8 Windows; if you want .NET 9, update both TFM and runtime in the publish command -->
    <TargetFramework>net8.0-windows</TargetFramework>
    <!-- Enable Windows Forms support -->
    <UseWindowsForms>true</UseWindowsForms>
    <!-- Use a custom application manifest to set execution level, without DPI settings -->
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <!-- Set High DPI mode via MSBuild rather than manifest or API -->
    <ApplicationHighDpiMode>PerMonitorV2</ApplicationHighDpiMode>
    <!-- Enable nullable reference types so that annotations like string? compile without warnings or errors -->
    <Nullable>enable</Nullable>
  </PropertyGroup>
</Project>