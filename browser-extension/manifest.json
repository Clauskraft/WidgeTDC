{
    "manifest_version": 3,
    "name": "WidgeTDC Assistant",
    "version": "1.0.0",
    "description": "AI-powered assistant for web browsing with semantic search and knowledge capture",
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "https://*.widgetdc.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "options_page": "options.html",
    "web_accessible_resources": [
        {
            "resources": [
                "sidebar.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}